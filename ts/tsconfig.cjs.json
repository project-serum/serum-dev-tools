{
    "compilerOptions": {
      "module": "commonjs",
      "target": "es2015",
      "lib": ["es2015", "dom"],
      "declaration": true,
      "outDir": "./dist",
      "rootDir": "./src",
      "typeRoots": ["./node_modules/@types"],
      "types": ["mocha", "chai", "node"],
      // for BN constructor
      "esModuleInterop": true,
      "skipLibCheck": true
    },
    "include": ["src/**/*"],
    "exclude": ["tests"],
    "typedocOptions": {
      "entryPoints": ["src/index.ts"],
      "out": "docs"
    }
  }
  