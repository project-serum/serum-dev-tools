{
  "extends": "./tsconfig.cjs.json",
  "compilerOptions": {
    "rootDir": ".",
    "typeRoots": ["./node_modules/@types"],
    "types": ["mocha", "chai", "node"],
    "strictNullChecks": true
  },
  "include": ["src/**/*.ts", "tests/**/*.ts", "**/*.test.ts"],
  "exclude": ["node_modules", "dist"],
  "typedocOptions": {
    "entryPoints": ["src/index.ts"],
    "out": "docs"
  }
}
